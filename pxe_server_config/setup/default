default vesamenu.c32
prompt 0
timeout 50
display boot.msg

label linux
  menu label ^Install system
  menu default
  kernel vmlinuz
  append initrd=initrd.img ip=dhcp inst.repo=https://mirror.its.sfu.ca/mirror/CentOS/7/os/x86_64 inst.ks=http://192.168.254.5/wp_ks.cfg
label rescue
  menu label ^Rescue installed system
  kernel vmlinuz
   append initrd=initrd.img rescue 
label local
  menu label Boot from ^local drive
  localboot 0xffff
